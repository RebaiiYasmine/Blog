<div class="grid grid-cols-3 gap-4 mx-auto my-8">
  <% @posts.each do |post| %>
    <div class="bg-white rounded-lg shadow-lg">
    
      <% if post && post.image.attached? %>
        <%= link_to image_tag(post.image, class: "w-full h-48 object-cover"), post %>
      <% end %>

      <div class="p-4">
        <h2 class="text-lg font-bold text-gray-800 mb-2">
          <%= link_to post.titre, post, class: "hover:text-white-500" %>
        </h2>
      </div>
    </div>
  <% end %>
  <div class="flex items-center justify-center">
    <%= link_to "New Post", new_post_path, class: "bg-white-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
  </div>
</div>

